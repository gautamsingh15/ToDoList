<div class="container">
	<div class="d-flex justify-content-center h-100 align-items-stretch">
		<div class="card">
			<div class="card-header">
            TODO LIST
            </div>
            <div class="card-body">
                <form  action="/todo" method="POST">
                    <div>
                        <label for="desc">Description</label><br>
                    </div>
                    <div class="input-group form-group">
                        
						<div class="input-group-prepend">
							<span class="input-group-text"><i class="fas fa-user"></i></span>
						</div>
						<input id="desc" type="text" name="description" class="form-control" placeholder="Enter Description">
						
					</div>
                    <div class="row">
                        <div class="form-group ">
                        <label for="">Category:</label><br>
                    <select name="category" id="" class="form-control">
                        <option value="personal">Personal</option>
                        <option value="work">Work</option>
                        <option value="school">School</option>
                        <option value="other">Other</option>
                    </select>
                        </div>
                    <div class="form-group offset-md-1">
                        <label for="tododate">Date:</label><br>
                        <input class="form-control" type="date" name="tododate" id="tododate" placeholder="DD/MM/YYYY">
                    </div>
                </div>
                <div class="text-center">
                <button type="submit" class="btn btn-primary"><i class="fa fa-plus">ADD</i></button>
            </div>
                </form>

</div>
  <div class="card-footer">
      <%  for(let i of todolist){ %>
